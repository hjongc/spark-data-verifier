# Hive/Spark Configuration
HIVE_JDBC_URL=jdbc:hive2://your-hive-server:10009/default?kyuubi.engine.type=SPARK_SQL
HIVE_USERNAME=spark
HIVE_PASSWORD=

# MySQL Configuration (for result storage)
MYSQL_JDBC_URL=jdbc:mysql://your-mysql-server:3306/verification_db
MYSQL_USERNAME=verification_user
MYSQL_PASSWORD=your_secure_password

# Verification Settings (optional - defaults in application.yml)
VERIFICATION_MAX_PARALLEL=100
VERIFICATION_SAMPLE_LIMIT=5
VERIFICATION_JDBC_FETCH_SIZE=20000
VERIFICATION_RETRY_ATTEMPTS=3
VERIFICATION_RETRY_DELAY_MS=1000
